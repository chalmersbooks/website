<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- * Login/Register Stuff * -->
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login}</from-action>
            <from-outcome>valid</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registerBean.register}</from-action>
            <from-outcome>registered</from-outcome>
            <to-view-id>/registered.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!-- * Add ads stuff * -->
    <navigation-rule>
        <from-view-id>/authorized/add_ad_wizard.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{adWizardController.save}</from-action>
            <from-outcome>saved</from-outcome>
            <to-view-id>/ad_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/authorized/add_ad_form.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{adFormController.save}</from-action>
            <from-outcome>saved</from-outcome>
            <to-view-id>/ad_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>